# =====================================================
# KARMA MARKETING + MEDIA - MCP FRAMEWORK
# Production Environment Variables
# =====================================================
# Copy this to .env or set in your hosting provider (Render)
# =====================================================

# =====================================================
# REQUIRED - App will not start without these
# =====================================================

# Database (Render provides this automatically)
DATABASE_URL=postgresql://user:pass@host:5432/dbname

# Security Keys (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=generate-a-secure-64-char-hex-string
JWT_SECRET_KEY=generate-another-secure-64-char-hex-string

# CORS - Your actual domain(s), comma-separated
# IMPORTANT: Do NOT use * in production!
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =====================================================
# REQUIRED FOR AI CONTENT GENERATION
# =====================================================

# OpenAI (primary AI provider)
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic (optional fallback)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# =====================================================
# OPTIONAL - Enhanced Features
# =====================================================

# SEMRush (for keyword research & competitor analysis)
SEMRUSH_API_KEY=your-semrush-api-key

# SendGrid (for email notifications)
SENDGRID_API_KEY=SG.your-sendgrid-key
FROM_EMAIL=noreply@yourdomain.com
EMAIL_FROM_NAME=Karma Marketing

# Twilio (for SMS notifications)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_FROM_NUMBER=+1234567890

# WordPress Publishing
WP_BASE_URL=https://clientsite.com
WP_USERNAME=api-user
WP_APP_PASSWORD=xxxx-xxxx-xxxx-xxxx

# Google Business Profile
GBP_CLIENT_ID=your-client-id
GBP_CLIENT_SECRET=your-client-secret
GBP_API_KEY=your-api-key

# =====================================================
# CONFIGURATION
# =====================================================

# Environment
FLASK_ENV=production
APP_URL=https://yourdomain.com

# AI Model Settings
DEFAULT_AI_MODEL=gpt-4o-mini
FALLBACK_AI_MODEL=claude-3-haiku-20240307

# Content Defaults
DEFAULT_BLOG_WORD_COUNT=1200
DEFAULT_TONE=professional

# JWT Token Expiration (hours)
JWT_EXPIRES_HOURS=72

# Background Jobs
ENABLE_SCHEDULER=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
